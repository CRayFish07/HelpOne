<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/rc_ac_ll_file_download"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:background="@color/rc_main_theme">
        <ImageView
            android:id="@+id/rc_ac_iv_title_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:background="@drawable/rc_selector_title_back_press"
            android:src="@drawable/rc_ac_file_preview"/>

        <View
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:background="#0083e0" />

        <TextView
            android:gravity="center_vertical|left"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:singleLine="true"
            android:text="@string/rc_ac_file_download_preview"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rc_ac_ll_download_file_detail_info"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="39dp"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/rc_ac_iv_file_type_image"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/rc_ac_tv_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="17dp"
            android:singleLine="true"
            android:ellipsize="middle"
            android:textSize="16sp"
            android:textColor="#343434"/>
        <TextView
            android:id="@+id/rc_ac_tv_file_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="17dp"
            android:textSize="12sp"
            android:textColor="#a8a8a8"/>
    </LinearLayout>
    <Button
        android:id="@+id/rc_ac_btn_download_button"
        android:layout_gravity="center_horizontal"
        android:layout_width="328dp"
        android:layout_height="50dp"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:text="@string/rc_ac_file_download_btn"
        android:background="@drawable/rc_ac_btn_file_download_open_button"
        />
    <LinearLayout
        android:id="@+id/rc_ac_ll_progress_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
        <ProgressBar
            android:id="@+id/rc_ac_pb_download_progress"
            style="@style/rc_pb_file_download_progress"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="3dp"
            android:layout_weight="1" />

            <ImageView
                android:id="@+id/rc_btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:src="@drawable/rc_btn_download_cancel"/>
        </LinearLayout>
        <TextView
            android:id="@+id/rc_ac_tv_download_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:textColor="#343434"
            android:layout_marginTop="22dp"/>
    </LinearLayout>
</LinearLayout>